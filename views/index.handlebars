<h1>Eat Da Burger!</h1>
<br>

<div id = 'burgersList'>
    <h2> Burgers waiting to be devoured!</h2>
    <hr>
    <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.id}}.{{this.burger_name}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    {{!-- <input type="hidden" name="devoured" value="false"> --}}
                    <button class="btn btn-warning devourBtn" type="submit">Devour it!</button>
                </form>
            </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>

