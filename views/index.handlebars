<h1>Eat Da Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<p>Enter a burger you want to eat. Click the "Submit" button</p>
<form class="create-form">
    <div class="form-group">
        <label for="bu"></label>
        <input type="text" id="bu" name="name">
    </div>

    <button type="submit">Submit</button>
</form>